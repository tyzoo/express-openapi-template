doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description' content='')
    meta(name='author' content='')
    title= title
    link(href="../css/bootstrap.bundle.min.css", rel='stylesheet')
    link(href='../css/styles.css', rel='stylesheet')
  body.text-center
    .cover-container.d-flex.h-100.p-3.mx-auto.flex-column
      header.masthead.mb-auto.text-center
        .inner
          h3.masthead-brand
            block= title
      main.inner.cover(role='main')
        block body
      footer.mastfoot.mt-auto
        .inner
          p
            | By: 
            a(href=`https://github.com/tyzoo}`)
              span @tyzoo
    script(src="../js/bootstrap.bundle.min.js")
    script(src="../js/bundle.js")